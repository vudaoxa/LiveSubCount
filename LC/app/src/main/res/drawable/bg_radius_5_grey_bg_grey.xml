        android:width="1px"
        android:color="@color/grey_10" >
    </stroke>


    <!-- các thuộc tính căn chỉnh-->


    <!-- và đây là bán kính đường tròn ở 4 góc -->
    <corners
        android:radius="4dp" >
    </corners>

</shape>